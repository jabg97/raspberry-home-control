<div class="modal fade right" id="mensaje_registrar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-notify  modal-full-height modal-right" role="document">

        <div class="modal-content">

            <div class="modal-header dark-header">
                <p class="heading lead">Registrar Usuario</p>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="white-text">&times;</span>
                </button>
            </div>

            <div class="modal-body ">
                <div class="text-center">
                    <i class="fa fa-user-plus fa-5x mb-1 animated rotateIn dark-icon"></i>


                    <h5 class="h5-resposive"> Informacion del usuario</h5>
                </div>
                <hr>
                <br>


                <form id="insertForm" method="POST" action="{{ path('insertUser') }}">

                    <div class="md-form error_div">
                        <i class="fa fa-user-circle prefix"></i>
                        <input id="codigo" name="codigo" type="text" required class="form-control validate"
                            pattern="[a-z0-9]{1,20}" title="Ingrese el nombre de usurio">
                        <label for="codigo" data-error="Incorrecto" data-success="Correcto">Ingresa el codigo </label>
                    </div>
                    <br>


                    <div class="md-form error2_div">
                        <i class="fa fa-lock prefix"></i>
                        <input type="password" class="form-control validate" id="password" name="password"
                            pattern="[A-Za-z0-9]{6,20}" title="Ingrese una contraseña válida"
                            placeholder="Ingresa la contrase&ntilde;a" />
                        <label data-error="Incorrecto" data-success="Correcto" for="username">Ingresa la
                            contrase&ntilde;a.</label>
                    </div>

                    <br>

                    <div class="md-form error3_div">
                        <i class="fa fa-envelope prefix"></i>
                        <input id="email" name="email" type="email" required class="form-control validate"
                            pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" title="Ingrese un email v&aacute;lido">
                        <label for="email" data-error="Incorrecto" data-success="Correcto">Ingresa el email</label>
                    </div>
                    <br>


                    <div class="md-form error4_div">
                        <i class="prefix"></i>
                        <em> <i class="fa fa-id-card fa-2x left icon left"></i>&nbsp;&nbsp;&nbsp;&nbsp;Selecciona el rol
                            de usuario</em>

                        <select id="rol" name="rol" data-placeholder="Seleccione el rol de usuario"
                            class="chosen-select form-control validate" tabindex="5">
                            <optgroup label="Rol del Usuario">
                                <option value="ROLE_USER">ROLE_USER</option>
                                <option value="ROLE_ADMIN">ROLE_ADMIN</option>
                            </optgroup>

                        </select>

                    </div>
                    <br>

                    <center><button class="btn btn-lg  btn-unique waves-effect hoverable" id="btn-validar"><i
                                class='fa fa-plus left'></i> Registrar</button> </center>
                </form>
            </div>

        </div>

    </div>
</div>

